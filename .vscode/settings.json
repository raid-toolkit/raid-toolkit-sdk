{
  "files.associations": {
    "appsettings.json": "jsonc"
  },
  "editor.detectIndentation": false,
  "editor.tabSize": 4,
  "editor.fontFamily": "Operator Mono",
  "editor.fontWeight": "300",
  "terminal.integrated.shellIntegration.decorationsEnabled": true,
  "debug.console.fontSize": 9,
  "debug.console.fontFamily": "Operator Mono",
  "debug.console.wordWrap": false,
  "debug.console.collapseIdenticalLines": false,
  "terminal.integrated.fontSize": 9,
  "terminal.integrated.fontWeight": "300",
  "[json]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
  },
  "[jsonc]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
  },
  "[csharp]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "omnisharp.enableEditorConfigSupport": true,
  "omnisharp.organizeImportsOnFormat": true,
  "omnisharp.enableRoslynAnalyzers": true,
  // "omnisharp.useEditorFormattingSettings": true,
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "comment.block",
          "comment.block.documentation",
          "punctuation.squarebracket.open.cs",
          "punctuation.squarebracket.close.cs",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js", //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.vs": true,
    "**/lib": true,
    "**/node_modules": true,
    "**/bin": true,
    "**/obj": true,
    "**/*.csproj.user": true
  }
}