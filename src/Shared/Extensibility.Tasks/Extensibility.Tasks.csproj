<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net472;net5.0-windows</TargetFrameworks>
        <LangVersion>10.0</LangVersion>
        <developmentDependency>true</developmentDependency>
        <NoPackageAnalysis>true</NoPackageAnalysis>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <AssemblyName>Raid.Toolkit.Extensibility.Tasks</AssemblyName>
        <RootNamespace>Raid.Toolkit.Extensibility.Tasks</RootNamespace>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Build.Tasks.Core" Version="17.1.0" />
        <PackageReference Include="il2cpptoolkit.common" Version="1.0.59" />
        <PackageReference Include="il2cpptoolkit.metadata" Version="1.0.59" />
        <PackageReference Include="il2cpptoolkit.reversecompiler" Version="1.0.59" />
        <PackageReference Include="il2cpptoolkit.runtime" Version="1.0.59" />
        <PackageReference Include="il2cpptoolkit.target.netcore" Version="1.0.59" />
        <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Model\Model.csproj" />
        <ProjectReference Include="..\Common\Common.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="build\**">
            <Pack>true</Pack>
            <PackagePath>build\</PackagePath>
        </None>
        <None Include="buildCrossTargeting\**">
            <Pack>true</Pack>
            <PackagePath>buildCrossTargeting\</PackagePath>
        </None>
        <None Include="$(OutputPath)\net472\Raid.Toolkit.Extensibility.Tasks.dll">
            <Pack>true</Pack>
            <PackagePath>build\MSBuild\</PackagePath>
        </None>
        <None Include="$(OutputPath)\net5.0-windows\Raid.Toolkit.Extensibility.Tasks.dll">
            <Pack>true</Pack>
            <PackagePath>build\MSBuildCore\</PackagePath>
        </None>
    </ItemGroup>

</Project>
