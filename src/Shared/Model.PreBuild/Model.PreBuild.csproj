<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>net6.0-windows</TargetFrameworks>
        <LangVersion>10.0</LangVersion>
        <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
        <Platforms>x64</Platforms>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="il2cpptoolkit.reversecompiler" Version="2.0.132-alpha" />
        <PackageReference Include="il2cpptoolkit.target.netcore" Version="2.0.132-alpha" />
        <ProjectReference Include="..\Model\Model.csproj" />
    </ItemGroup>

    <Target Name="PostBuild" AfterTargets="PostBuildEvent">
        <Exec Command="$(TargetDir)$(TargetName).exe $(BinDir)$(TargetFrameworkVersion)\" />
    </Target>
</Project>
