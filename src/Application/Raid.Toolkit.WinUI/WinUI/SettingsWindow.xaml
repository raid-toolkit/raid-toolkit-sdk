<rtkuibase:RTKWindow x:Class="Raid.Toolkit.WinUI.SettingsWindow"
    xmlns:rtkuibase="using:Raid.Toolkit.WinUI.Base"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Raid.Toolkit.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" Title="Raid Toolkit Settings">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
            <CheckBox x:Name="AutoUpdate" HorizontalAlignment="Left" Content="Automatically check for updates" />
            <CheckBox x:Name="RunOnStartup" HorizontalAlignment="Left" Content="Run on startup" />
            <CheckBox x:Name="ClickToFocus" HorizontalAlignment="Left" Content="Click tray icon to launch/focus Raid" />
            <CheckBox x:Name="InstallPreRelease" HorizontalAlignment="Left" Content="Install pre-release builds" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
            <Button Content="Save" Click="OnSave" />
            <Button Content="Cancel" Click="OnCancel" />
        </StackPanel>
    </Grid>
</rtkuibase:RTKWindow>
